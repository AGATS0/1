{# templates/security/profile.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Мой профиль</title>
</head>
<body>
    <div>
        <h1>Мой профиль</h1>
        
        <div>
            <p><strong>Имя:</strong> {{ client.name }}</p>
            <p><strong>Телефон:</strong> {{ client.phoneNumber }}</p>
        </div>

        <div style="margin: 20px 0;">
            <a href="{{ path('app_order_new') }}" class="btn btn-primary">Создать новый заказ</a>
            <a href="{{ path('app_logout') }}" class="btn btn-secondary">Выйти</a>
        </div>

        <h2>Мои заказы</h2>
        
        {% if orders|length > 0 %}
            <table border="1">
                <thead>
                    <tr>
                        <th>ID заказа</th>
                        <th>Дата создания</th>
                        <th>Блюда</th>
                        <th>Общая стоимость</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.createdAt ? order.createdAt|date('d.m.Y H:i') : 'Н/Д' }}</td>
                            <td>
                                {% for dish in order.dish %}
                                    {{ dish.name }} ({{ dish.price }} руб.)<br>
                                {% endfor %}
                            </td>
                            <td>
                                {% set total = 0 %}
                                {% for dish in order.dish %}
                                    {% set total = total + dish.price %}
                                {% endfor %}
                                {{ total }} руб.
                            </td>
                            <td>В обработке</td>
                            <td>
                                <a href="{{ path('app_order_show', {'id': order.id}) }}">Просмотр</a>
                                <a href="{{ path('app_order_edit', {'id': order.id}) }}">Изменить</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>У вас пока нет заказов.</p>
        {% endif %}
    </div>
</body>
</html>