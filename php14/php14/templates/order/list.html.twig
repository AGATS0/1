<!DOCTYPE html>
<html>
<head>
    <title>Список заказов</title>
</head>
<body>
    <div>
        <h1>Список заказов</h1>  

        <a href="{{ path('order_create') }}">Создать новый заказ</a>
        
        {% if orders|length > 0 %}
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Клиент</th>
                        <th>Телефон</th>
                        <th>Блюда</th>
                        <th>Общая стоимость</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.client.name }}</td>
                            <td>{{ order.client.phoneNumber }}</td>
                            <td>
                                {% for dish in order.dish %}
                                    {{ dish.name }} ({{ dish.price }} руб.)<br>
                                {% endfor %}
                            </td>
                            <td>
                                {% set total = 0 %}
                                {% for dish in order.dish %}
                                    {% set total = total + dish.price %}
                                {% endfor %}
                                {{ total }} руб.
                            </td>
                            <td>
                                 <a href="{{ path('order_show', {'id': order.id}) }}">Просмотр</a> 
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>Заказов пока нет</div>
        {% endif %}
    </div>
</body>
</html>